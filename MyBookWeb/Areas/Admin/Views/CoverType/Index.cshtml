@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<partial name ="_Notification" />
<div class="container p-6">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br/>
<table class="table table-bordered table-striped ">
    <thead>
    <tr>
        <th>
            CoverType Id
        </th>
        <th>
            CoverType Name
        </th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td>
                @obj.Id
            </td>
            <td>
                @obj.Name
            </td>
            <td class="text-center" width="10%">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </div>
            </td>
            <td class="text-center" width="10%">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-pencil-square"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>

</table>
 

</div>


